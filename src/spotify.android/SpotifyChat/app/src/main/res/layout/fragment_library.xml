<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.LibraryFragment"
    android:background="@color/background_color">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:clipToOutline="true"
        tools:targetApi="s">

        <TextView
            android:id="@+id/libraryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="@string/your_library"
            android:textAppearance="@style/libraryText"
            android:gravity="center_horizontal|top"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_songs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        tools:listitem="@layout/item_song"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/nav_footer_container"
        app:layout_constraintTop_toBottomOf="@+id/title_container">
    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/nav_footer_container"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_nav_library"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_alignParentEnd="false"
            android:layout_gravity="start"
            android:layout_marginStart="45sp"
            android:background="@drawable/ic_library"
            android:backgroundTint="@color/nav_inactive"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/your_library_text"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal|top"
            android:text="@string/your_library"
            android:textAppearance="@style/navText"
            android:textColor="#78909C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_nav_search"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end|bottom"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/ic_search"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="59dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal|top"
            android:text="@string/search"
            android:textAppearance="@style/navText"
            android:textColor="#78909C"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_nav_chat"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="45sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/ic_support"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/support_text"
            android:layout_width="86dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="18sp"
            android:gravity="center_horizontal|top"
            android:text="@string/support"
            android:textAppearance="@style/navText"
            android:textColor="#78909C"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>